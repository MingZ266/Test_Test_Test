<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/Text_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/writeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:text="标题_text"
                    android:textColor="#9C27B0"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/writeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="时间_text"
                    android:textColor="#616161"
                    android:textSize="18sp"/>

            </LinearLayout>

            <DiyView.AutoHeightViewPager
                android:id="@+id/mainBtnPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/orange"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/testBtnOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4BA9F6"
            android:padding="10dp"
            android:text="测试按钮 One"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/testBtnTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFA9F6"
            android:padding="10dp"
            android:text="测试按钮 Two"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/red"
            android:text="重置"
            android:textSize="22sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/Text_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:textSize="12sp"
        android:text="Hello World!" />

</RelativeLayout>