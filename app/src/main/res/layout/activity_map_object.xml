<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapObjectActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/showPic"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="show pic"/>

        <ImageView
            android:id="@+id/Pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/showJsonText"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="show json text"/>

        <Button
            android:id="@+id/showStrText"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="show str text"/>

        <TextView
            android:id="@+id/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#0FFFF0"/>

        <Button
            android:id="@+id/jsonToArray"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="json to array"/>

        <Button
            android:id="@+id/arrayToJson"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="array to json"/>

        <TextView
            android:id="@+id/srcText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#0FF000"/>

        <TextView
            android:id="@+id/Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#0FFFF0"/>

        <Button
            android:id="@+id/mapStrings"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="Map Strings"/>

        <TextView
            android:id="@+id/mapStringsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#0FFFF0"/>

    </LinearLayout>

</ScrollView>