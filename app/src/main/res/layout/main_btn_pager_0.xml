<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <!-- 1 -->
    <Button
        android:id="@+id/城市基础信息类"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="显示城市基础信息" />

    <!-- 2 -->
    <Button
        android:id="@+id/jsonString1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="JsonString 1"
        android:textAllCaps="false" />

    <!-- 3 -->
    <Button
        android:id="@+id/jsonString2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="JsonString 2"
        android:textAllCaps="false" />

    <!-- 4 -->
    <Button
        android:id="@+id/jsonString3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="JsonString 3"
        android:textAllCaps="false" />

    <!-- 5 -->
    <TextView
        android:id="@+id/Text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <!-- 6 -->
    <TextView
        android:id="@+id/Text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <!-- 7 -->
    <TextView
        android:id="@+id/Text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <!-- 8 -->
    <Button
        android:id="@+id/toFile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="文件操作"
        android:textAllCaps="false" />

    <!-- 9 -->
    <Button
        android:id="@+id/toMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Map"
        android:textAllCaps="false" />

    <!-- 10 -->
    <Button
        android:id="@+id/toTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题栏操作"
        android:textAllCaps="false" />

    <!-- 11 -->
    <Button
        android:id="@+id/toTimerTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="延时测试"
        android:textAllCaps="false" />

    <!-- 12 -->
    <Button
        android:id="@+id/toDownFresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下拉刷新"
        android:textAllCaps="false" />

    <!-- 13 -->
    <Button
        android:id="@+id/toViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To View Pager"
        android:textAllCaps="false" />

    <!-- 14 -->
    <Button
        android:id="@+id/toFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试Activity的结束"
        android:textAllCaps="false" />

    <!-- 15 -->
    <Button
        android:id="@+id/toListInScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To List In Scroll"
        android:textAllCaps="false" />

    <!-- 16 -->
    <Button
        android:id="@+id/toDIYAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动画"
        android:textSize="22sp" />

    <!-- 17 -->
    <Button
        android:id="@+id/toPops_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="弹窗"
        android:textSize="22sp" />

    <!-- 18 -->
    <Button
        android:id="@+id/toLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载中"
        android:textSize="22sp" />

    <!-- 19 -->
    <Button
        android:id="@+id/toTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获得时间"
        android:textSize="22sp" />

    <!-- 20 -->
    <Button
        android:id="@+id/toSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spinner下拉选择"
        android:textAllCaps="false"
        android:textSize="22sp" />

</LinearLayout>
